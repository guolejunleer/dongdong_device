<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/video_box_bg">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginTop="40dp">-->

    <io.vov.vitamio.widget.VideoView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible" />

    <!--<com.dongdong.widget.AdViewPager-->
    <!--android:id="@+id/ad_view_pager"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <!--</LinearLayout>-->

    <LinearLayout
        android:id="@+id/walldevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ellipse_shape"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/walldevice_dong_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/walldevice_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/walldevice_room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/unitdevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:background="@drawable/ellipse_shape"
        android:orientation="horizontal"
        android:padding="@dimen/space_10"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/space_8"
        android:orientation="horizontal">

        <View
            android:id="@+id/netcard_one_statu"
            android:layout_width="@dimen/space_15"
            android:layout_height="@dimen/space_15"
            android:layout_margin="@dimen/space_5"
            android:background="@drawable/net_statu_circle_disconnected" />

        <View
            android:id="@+id/netcard_two_statu"
            android:layout_width="@dimen/space_15"
            android:layout_height="@dimen/space_15"
            android:layout_margin="@dimen/space_5"
            android:background="@drawable/net_statu_circle_disconnected" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/space_8"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

</FrameLayout>